<h1>Edit a Portfolio item</h1>

<%= form_for(@portfolio) do |f| %>
  <div>
    <%= f.label :title, style: "display: block;" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :subtitle, style: "display: block;" %>
    <%= f.text_field :subtitle %>
  </div>
  <div>
    <%= f.label :body, style: "display: block;" %>
    <%= f.text_area :body %>
  </div>
  <div style="margin-top: 10px;">
    <%= f.submit %>
  </div>
<% end %>
